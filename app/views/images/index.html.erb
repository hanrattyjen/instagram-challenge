<% if @images.any? %>
  <% @images.each do |image| %>
    <h2> <%= image.description %> </h2>
    <%= link_to image.description, image_path(image) %>
    <%= p image.avatar_file_name %>
    <%= image_tag image.avatar.url %>
    <%= image_tag image.avatar.url(:medium) %>
    <%= image_tag image.avatar.url(:thumb) %>
  <% end %>
<% else %>
  No images yet
<% end %>
<%= link_to 'Add an image', new_image_path %>
